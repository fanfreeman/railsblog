<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Published at:</b>
  <%= @post.published_at %>
</p>

<p>
  <b>Body:</b>
  <%= render_markdown(@post.body) %>
</p>

<p>
  <% @post.tags.any? %>
    <% @post.tags.each do |tag| %>
    <%= link_to tag.name, tagged_url(:tag => tag.name) %>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
