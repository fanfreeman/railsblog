<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>

<div id="header">
  <ul>
    <li><%= link_to 'Blog Home', blog_path %></li>
    <% if session[:user_id] %>
    <li><%= link_to 'Manage Posts', posts_path %></li>
    <li><%= link_to 'Manage Editors', users_path %></li>
    <% else %>
    <li><%= link_to 'Editor Login', login_path %></li>
    <% end %>
  </ul>
  <% if session[:user_id] %>
  <%= button_to 'Logout', logout_path, method: :delete %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
